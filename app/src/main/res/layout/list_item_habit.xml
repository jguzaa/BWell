<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="habit"
            type="com.jguzaa.bwell.data.Habit" />
        <variable
            name="clickListener"
            type="com.jguzaa.bwell.fragments.home.HabitListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:onClick="@{() -> clickListener.onClick(habit)}">

        <ImageView
            android:id="@+id/habit_logo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="@color/deep_orange_400" />

        <TextView
            android:id="@+id/sleep_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Habit"
            app:layout_constraintStart_toEndOf="@id/habit_logo"
            app:layout_constraintTop_toTopOf="@id/habit_logo"
            app:layout_constraintBottom_toBottomOf="@id/habit_logo"
            android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>